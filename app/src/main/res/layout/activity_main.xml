<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:text="Team A" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="44dp"
                    android:textSize="32sp"
                    android:textColor="#000000"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textColor="#000000"
                    android:text="/" />

                <TextView
                    android:id="@+id/wickets_team_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textColor="#000000"
                    android:text="0" />


            </LinearLayout>

            <Button
                android:id="@+id/addSixForTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addSixForTeamA"
                android:text="+6 Runs" />

            <Button
                android:id="@+id/addFourForTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addFourForTeamA"
                android:text="+4 Runs" />

            <Button
                android:id="@+id/addThreeForTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addThreeForTeamA"
                android:text="+3 RUNS" />

            <Button
                android:id="@+id/addTwoForTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addTwoForTeamA"
                android:text="+2 RUNS" />

            <Button
                android:id="@+id/addOneForTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addOneForTeamA"
                android:text="+1 RUNS" />

            <Button
                android:id="@+id/addwicketTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addWicketsTeamA"
                android:text="OUT" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:text="Team B" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="44dp"
                android:textSize="32sp"
                android:textColor="#000000"
                android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textColor="#000000"
                    android:text="/" />

                <TextView
                    android:id="@+id/wickets_team_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textColor="#000000"
                    android:text="0" />

            </LinearLayout>



            <Button
                android:id="@+id/addSixForTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addSixForTeamB"
                android:text="+6 RUNS" />

            <Button
                android:id="@+id/addFourForTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addFourForTeamB"
                android:text="+4 RUNS" />

            <Button
                android:id="@+id/addThreeForTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addThreeForTeamB"
                android:text="+3 RUNS" />

            <Button
                android:id="@+id/addTwoForTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:onClick="addTwoForTeamB"
                android:text="+2 RUNS" />

            <Button
                android:id="@+id/addOneForTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addOneForTeamB"
                android:text="+1 RUNS" />

            <Button
                android:id="@+id/addwicketTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:onClick="addWicketsTeamB"
                android:text="OUT" />


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="2dp"
        android:layout_height="440dp"
        android:paddingTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:onClick="scoreReset"
        android:text="MATCH OVER" />

</RelativeLayout>
